@model Category
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-md-6 grid-margin">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <h4 class="card-title">Delete Category</h4>
                    <div class="form-group">
                        <label asp-for="Name" class="form-control-label">Category</label>
                        <input asp-for="Name" class="form-control" id="category" placeholder="Category Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <button type="button" class="btn btn-pinterest mr-2" data-toggle="modal" data-target="#exampleModal">Delete</button>
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Delete Category</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure to delete this Category?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-success" data-dismiss="modal">No</button>
                                    <button type="submit" class="btn btn-pinterest">Yes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-success" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

